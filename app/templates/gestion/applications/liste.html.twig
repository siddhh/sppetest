{% extends 'gestion/base.pleine.html.twig' %}

{% block title %}Gestion des applications | {{ parent() }}{% endblock %}

{% block contenu %}

    <h2 class="page-title">Gestion des applications</h2>

    <div class="mt-3 row">
        <div class="col-4">
            <label for="recherche">Liste des applications</label>
        </div>
        <div class="col-4">
            <input type="text" id="recherche" placeholder="Rechercher / Filtrer" class="form-control"></input>
        </div>
        <div class="col-4">
            <a type="button" id="creationApplication" class="btn btn-primary pull-right" href="{{ path('afficher-gestion-application-creation') }}">Créer une application</a>
        </div>
    </div>

    {# Tableau des résultats #}
    <div class="page-list">
        <table id="tableau-resultats" class="table table-striped mt-3">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Libellé</th>
                    <th scope="col">Domaine</th>
                    <th scope="col">Sous-domaine</th>
                    <th scope="col">Exploitant</th>
                    <th scope="col">MOE</th>
                </tr>
            </thead>
            <tbody id='tableauApplications'>
            </tbody>
        </table>
    </div>

    {# Pagination #}
    <nav class="page-pagination" aria-label="Pagination des résultats">
        <ul id="pagination" class="pagination justify-content-center"></ul>
    </nav>

    {{ parent() }}

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('assets/js/utils/pagination.js') }}" type="text/javascript"></script>
    <script src="{{ asset('assets/js/gestion/applications/recherche.js') }}"></script>
{% endblock %}
