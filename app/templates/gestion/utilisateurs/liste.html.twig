{% extends 'gestion/base.pleine.html.twig' %}

{% block title %}Gestion des utilisateurs | {{ parent() }}{% endblock %}

{% block contenu %}

    <h2 class="page-title">Gestion des utilisateurs</h2>

    <div class="row mt-3">
        <div class="col-4">
            <label for="txtUserSearch">Liste des utilisateurs</label>
        </div>
        <div class="col-4">
            <input id="txtUserSearch" type="text" placeholder="Rechercher / Filtrer" class="search-filter form-control" />
        </div>
        <div class="col-4">
            <a class="btn btn-primary pull-right" href="{{ path('afficher-gestion-utilisateur-creation') }}">Créer un utilisateur</a>
        </div>
    </div>

    <table id="tbUsers" class="table table-striped mt-3">
        <thead class="thead-dark">
            <tr>
                <th>Utilisateur</th>
                <th>Balp</th>
                <th>Services</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td colspan="4" class="table-empty" style="display: none;">Aucun résultat n'a été trouvé.</td>
            </tr>
            <tr>
                <td colspan="4" class="table-loading" style="display: none;">Chargement des données en cours ...</td>
            </tr>
        </tbody>
    </table>

    {# Pagination #}
    <nav class="page-pagination" aria-label="Pagination des résultats">
        <ul id="pagination" class="pagination justify-content-center">
        </ul>
    </nav>

    {{ parent() }}

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('assets/js/utils/pagination.js') }}" type="text/javascript"></script>
    <script src="{{ asset('assets/js/gestion/utilisateurs/liste.js') }}" type="text/javascript"></script>
{% endblock %}