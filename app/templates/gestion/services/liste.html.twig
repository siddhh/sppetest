{% extends 'gestion/base.pleine.html.twig' %}

{% block title %}Gestion des services | {{ parent() }}{% endblock %}

{% block contenu %}

    <h2 class="page-title">Gestion des services</h2>

    <div class="row mt-3">
        <div class="col-4">
            <label for="filtre">Liste des services</label>
        </div>
        <div class="col-4">
            <input type="text" id="filtre" placeholder="Rechercher / Filtrer" class="form-control" name="filtre" />
        </div>
        <div class="col-4">
            <a href="{{ path('afficher-gestion-service-creation') }}" class="btn btn-primary pull-right">Créer un service</a>
        </div>
    </div>

    {# Tableau des résultats #}
    <div class="page-list">
        <table id="tableau-resultats" class="table table-striped mt-3">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Nom</th>
                    <th scope="col">Balp</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td colspan="4" class="table-empty" style="display: none;">Aucun résultat n'a été trouvé.</td>
                </tr>
                <tr>
                    <td colspan="4" class="table-loading" style="display: none;">Chargement des données en cours ...</td>
                </tr>
            </tbody>
        </table>
    </div>

    {# Pagination #}
    <nav class="page-pagination" aria-label="Pagination des résultats">
        <ul id="pagination" class="pagination justify-content-center"></ul>
    </nav>

    {{ parent() }}

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('assets/js/utils/pagination.js') }}" type="text/javascript"></script>
    <script src="{{ asset('assets/js/gestion/services/listing.js') }}" type="text/javascript"></script>
{% endblock %}
